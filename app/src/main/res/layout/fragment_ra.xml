<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_ra"
    android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ghhos.chat_client.ui.activity.MainActivity">

    <EditText
        android:id="@+id/fragment_ra_etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Put Login" />

    <EditText
        android:id="@+id/fragment_ra_etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_ra_etUsername"
        android:hint="Put password"
        android:password="true" />

    <Button
        android:id="@+id/fragment_ra_bAuth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_ra_etPassword"
        android:text="Auth" />

    <Button
        android:id="@+id/fragment_ra_bReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:layout_below="@+id/fragment_ra_bAuth"
        android:layout_alignParentEnd="true" />



    <Button
        android:id="@+id/fragment_ra_bChangePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FORGOT PASSWORD?"
        android:layout_below="@+id/fragment_ra_bReg"
        android:layout_alignParentStart="true" />

</RelativeLayout>
